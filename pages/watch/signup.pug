//- includes manager
include ../includes/spc-manager.pug
+loadBasicIncludes()

//- TEMP << cz local vars are lost in 2 includes..
include ../includes/spc-data.pug

//- Mixins
mixin customHead()
    link(rel="stylesheet", href=pagesStylesPath+"signup.css")


//- DOCTYPE
doctype html
html(lang="en")

    //- <head>
    +head(brandName, customHead)

    //- <body>
    body 
        header
            +navBar(logo, signupLinks)
            main#form-container
                span.icon
                    +userIcon()
                form(action="", method="post")
                    input(type="text", name="uname", placeholder="Full Name")
                    input(type="telephone", name="utelephone", placeholder="Telephone")
                    input(type="email", name="uemail", placeholder="Email")
                    input(type="password", name="upassword", placeholder="Create Password")
                    input(type="password", name="uconfirmpassword", placeholder="Confirm Password")
                    fieldset#radio-wrapper
                        legend I'm a
                        .group
                            label(for="customer") Customer
                            input(type="radio", name="role" value="Customer" id="customer")
                        .group
                            label(for="worker") Worker
                            input(type="radio", name="role" value="Worker" id="worker")
                    input(type="submit", value="Sign Up")

        //- Essential Scripts
        +loadScripts()