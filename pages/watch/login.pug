//- includes manager
include ../includes/spc-manager.pug
+loadBasicIncludes()

//- TEMP << cz local vars are lost in 2 includes..
include ../includes/spc-data.pug

//- Mixins
mixin customHead()
    link(rel="stylesheet", href=pagesStylesPath+"login.css")


//- DOCTYPE
doctype html
html(lang="en")

    //- <head>
    +head(brandName, customHead)

    //- <body>
    body 
        header
            +navBar(logo, loginLinks)
            main
                span.icon
                    +userIcon()
                form(action="", method="post")
                    input(type="email", name="uemail", placeholder="Email..")
                    input(type="password", name="upassword", placeholder="Password..")
                    input(type="submit", value="Login")
                a(href="#" id="forgot-passwd") Forgot Password?

        //- Essential Scripts
        +loadScripts()